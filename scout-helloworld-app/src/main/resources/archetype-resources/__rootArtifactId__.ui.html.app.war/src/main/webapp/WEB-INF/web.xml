<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

  <display-name>${displayName} HTML UI</display-name>

  <listener>
    <listener-class>org.eclipse.scout.rt.server.commons.WebappEventListener</listener-class>
  </listener>

  <listener>
    <listener-class>org.eclipse.scout.rt.ui.html.UiHttpSessionListener</listener-class>
  </listener>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>${package}.ui.html.UiServletFilter</filter-class>
    <init-param>
      <param-name>filter-exclude</param-name>
      <param-value>
        /res/*
      </param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>UiServlet</servlet-name>
    <servlet-class>org.eclipse.scout.rt.ui.html.UiServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UiServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <!-- Session timeout in minutes -->
    <session-timeout>5</session-timeout>
  </session-config>

</web-app>
