<idea-plugin allow-bundled-update="true">
    <id>org.eclipse.scout.sdk.s2i</id>
    <name>Eclipse Scout</name>
    <version>10.0.0.9999999999</version>

    <vendor url="https://www.eclipse.org/scout/">Eclipse Scout Project</vendor>

    <description><![CDATA[
      Eclipse Scout integration for IntelliJ IDEA
    ]]></description>

    <change-notes><![CDATA[
      Initial version providing:
        - Derived resource update for FormData & PageData
        - @ClassId validation Inspections
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="191.5109.14"/>

    <application-components>
        <component>
            <interface-class>org.eclipse.scout.sdk.core.log.ISdkConsoleSpi</interface-class>
            <implementation-class>org.eclipse.scout.sdk.s2i.IdeaLogger</implementation-class>
        </component>
    </application-components>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>com.intellij.copyright</depends>

    <project-components>
        <component>
            <interface-class>org.eclipse.scout.sdk.s2i.derived.DerivedResourceManager</interface-class>
            <implementation-class>org.eclipse.scout.sdk.s2i.derived.impl.DerivedResourceManagerImplementor
            </implementation-class>
        </component>
        <component>
            <interface-class>org.eclipse.scout.sdk.core.builder.java.comment.IDefaultElementCommentGeneratorSpi
            </interface-class>
            <implementation-class>org.eclipse.scout.sdk.s2i.IdeaSettingsCommentGenerator</implementation-class>
        </component>
        <component>
            <interface-class>org.eclipse.scout.sdk.core.s.util.maven.IMavenRunnerSpi</interface-class>
            <implementation-class>org.eclipse.scout.sdk.s2i.IdeaMavenRunner</implementation-class>
        </component>
        <component>
            <implementation-class>org.eclipse.scout.sdk.s2i.classid.AutoCreateClassIdAnnotationComponent
            </implementation-class>
        </component>
        <component>
            <implementation-class>org.eclipse.scout.sdk.s2i.EclipseScoutBundle</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable groupId="language" displayName="Scout" id="preferences.ScoutSettings"
                             instance="org.eclipse.scout.sdk.s2i.settings.ScoutSettings"/>
        <macro implementation="org.eclipse.scout.sdk.s2i.IdeaHomePathMacro"/>
        <!--suppress InspectionMappingConsistency -->
        <localInspection language="JAVA"
                         shortName="MissingClassId"
                         groupName="Scout"
                         enabledByDefault="false"
                         level="ERROR"
                         implementationClass="org.eclipse.scout.sdk.s2i.classid.MissingClassIdInspection"/>
        <!--suppress InspectionMappingConsistency -->
        <globalInspection language="JAVA"
                          shortName="DuplicateClassId"
                          groupName="Scout"
                          enabledByDefault="false"
                          level="ERROR"
                          implementationClass="org.eclipse.scout.sdk.s2i.classid.DuplicateClassIdInspection"/>
    </extensions>

    <actions>
        <group id="org.eclipse.scout.sdk.s2i.ScoutMenu" text="Scout">
            <add-to-group group-id="MainMenu" relative-to-action="ToolsMenu" anchor="after"/>
            <action id="org.eclipse.scout.sdk.s2i.UpdateAllDerivedResourcesMenu"
                    class="org.eclipse.scout.sdk.s2i.derived.impl.UpdateAllDerivedResourcesMenu"/>
        </group>
    </actions>

</idea-plugin>
