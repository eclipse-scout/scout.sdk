<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.scout.sdk</groupId>
    <artifactId>org.eclipse.scout.sdk.parent</artifactId>
    <version>5.1.0-SNAPSHOT</version>
    <relativePath>../org.eclipse.scout.sdk.parent</relativePath>
  </parent>

  <artifactId>org.eclipse.scout.sdk.target</artifactId>
  <packaging>pom</packaging>
  <name>Eclipse Scout SDK Target Platform Definition</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>only-scout-rt.target</file>
                  <type>target</type>
                  <classifier>only-scout-rt</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-helios.target</file>
                  <type>target</type>
                  <classifier>eclipse-helios</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-indigo.target</file>
                  <type>target</type>
                  <classifier>eclipse-indigo</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-juno.target</file>
                  <type>target</type>
                  <classifier>eclipse-juno</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-kepler.target</file>
                  <type>target</type>
                  <classifier>eclipse-kepler</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-luna.target</file>
                  <type>target</type>
                  <classifier>eclipse-luna</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-mars.target</file>
                  <type>target</type>
                  <classifier>eclipse-mars</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-mars-integration.target</file>
                  <type>target</type>
                  <classifier>eclipse-mars-integration</classifier>
                </artifact>
                <artifact>
                  <file>eclipse-staging.target</file>
                  <type>target</type>
                  <classifier>eclipse-staging</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>checkTargets</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>target-platform-validation-plugin</artifactId>
            <version>${tycho-extras.version}</version>
            <executions>
              <execution>
                <phase>verify</phase>
                <goals>
                  <goal>validate-target-platform</goal>
                </goals>
                <configuration>
                  <targetFiles>
                    <param>only-scout-rt.target</param>
                    <param>eclipse-helios.target</param>
                    <param>eclipse-indigo.target</param>
                    <param>eclipse-juno.target</param>
                    <param>eclipse-kepler.target</param>
                    <param>eclipse-luna.target</param>
                    <param>eclipse-mars.target</param>
                    <param>eclipse-mars-integration.target</param>
                    <param>eclipse-staging.target</param>
                  </targetFiles>
                  <failOnError>true</failOnError>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
