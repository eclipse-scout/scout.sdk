<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.eclipse.scout.sdk</groupId>
  <artifactId>org.eclipse.scout.sdk</artifactId>
  <version>5.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
<!--     <module>org.eclipse.scout.sdk.parent</module> -->
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jdk.source.version>1.7</jdk.source.version>
    <scout.rt.version>5.1.0-SNAPSHOT</scout.rt.version>
    <!-- exclude the unit tests from sonar -->
    <sonar.exclusions>file:**/org.eclipse.scout.sdk.test/**</sonar.exclusions>

    <!-- exclude the unit tests and UI (we have no UI tests anyway) from sonar -->
    <sonar.coverage.exclusions>file:**/org.eclipse.scout.sdk.test/**,
      file:**/org.eclipse.scout.sdk.ui/**,
      file:**/org.eclipse.scout.sdk.rap.ui/**</sonar.coverage.exclusions>

    <!-- dependencies to Eclipse artifacts deployed by org.eclipse.scout.sdk.core.releng/ -->
    <osgiVersion>3.10.2.v20150203-1939</osgiVersion>
    <osgiVersionMaven>${osgiVersion}-SNAPSHOT</osgiVersionMaven>
    <equinoxVersion>3.6.200.v20130402-1505</equinoxVersion>
    <equinoxVersionMaven>${equinoxVersion}-SNAPSHOT</equinoxVersionMaven>
    <equinoxRegistryVersion>3.5.400.v20140428-1507</equinoxRegistryVersion>
    <equinoxRegistryVersionMaven>${equinoxRegistryVersion}-SNAPSHOT</equinoxRegistryVersionMaven>
    <equinoxPreferencesVersion>3.5.200.v20140224-1527</equinoxPreferencesVersion>
    <equinoxPreferencesVersionMaven>${equinoxPreferencesVersion}-SNAPSHOT</equinoxPreferencesVersionMaven>
    <eclipseResourcesVersion>3.9.1.v20140825-1431</eclipseResourcesVersion>
    <eclipseResourcesVersionMaven>${eclipseResourcesVersion}-SNAPSHOT</eclipseResourcesVersionMaven>
    <eclipseCommandsVersion>3.6.100.v20140528-1422</eclipseCommandsVersion>
    <eclipseCommandsVersionMaven>${eclipseCommandsVersion}-SNAPSHOT</eclipseCommandsVersionMaven>
    <eclipseContenttypeVersion>3.4.200.v20140207-1251</eclipseContenttypeVersion>
    <eclipseContenttypeVersionMaven>${eclipseContenttypeVersion}-SNAPSHOT</eclipseContenttypeVersionMaven>
    <eclipseExpressionsVersion>3.4.600.v20140128-0851</eclipseExpressionsVersion>
    <eclipseExpressionsVersionMaven>${eclipseExpressionsVersion}-SNAPSHOT</eclipseExpressionsVersionMaven>
    <eclipseFilesystemVersion>1.4.100.v20140514-1614</eclipseFilesystemVersion>
    <eclipseFilesystemVersionMaven>${eclipseFilesystemVersion}-SNAPSHOT</eclipseFilesystemVersionMaven>
    <eclipseRuntimeVersion>3.10.0.v20140318-2214</eclipseRuntimeVersion>
    <eclipseRuntimeVersionMaven>${eclipseRuntimeVersion}-SNAPSHOT</eclipseRuntimeVersionMaven>
    <eclipseJobsVersion>3.6.1.v20141014-1248</eclipseJobsVersion>
    <eclipseJobsVersionMaven>${eclipseJobsVersion}-SNAPSHOT</eclipseJobsVersionMaven>
    <eclipseTextVersion>3.5.300.v20130515-1451</eclipseTextVersion>
    <eclipseTextVersionMaven>${eclipseTextVersion}-SNAPSHOT</eclipseTextVersionMaven>
    <eclipseSearchVersion>3.9.100.v20140226-1637</eclipseSearchVersion>
    <eclipseSearchVersionMaven>${eclipseSearchVersion}-SNAPSHOT</eclipseSearchVersionMaven>
    <jdtVersion>3.10.2.v20150120-1634</jdtVersion>
    <jdtVersionMaven>${jdtVersion}-SNAPSHOT</jdtVersionMaven>
    <jdtUiVersion>3.10.2.v20141014-1419</jdtUiVersion>
    <jdtUiVersionMaven>${jdtUiVersion}-SNAPSHOT</jdtUiVersionMaven>
    <uiWorkbenchVersion>3.106.2.v20150204-1030</uiWorkbenchVersion>
    <uiWorkbenchVersionMaven>${uiWorkbenchVersion}-SNAPSHOT</uiWorkbenchVersionMaven>
    <uiJfaceVersion>3.10.2.v20141021-1035</uiJfaceVersion>
    <uiJfaceVersionMaven>${uiJfaceVersion}-SNAPSHOT</uiJfaceVersionMaven>
    <uiJfaceTextVersion>3.9.2.v20141003-1326</uiJfaceTextVersion>
    <uiJfaceTextVersionMaven>${uiJfaceTextVersion}-SNAPSHOT</uiJfaceTextVersionMaven>
    <uiSwtVersion>3.103.2.v20150203-1351</uiSwtVersion>
    <uiSwtVersionMaven>${uiSwtVersion}-SNAPSHOT</uiSwtVersionMaven>
    <uiIdeVersion>3.10.2.v20141118-1227</uiIdeVersion>
    <uiIdeVersionMaven>${uiIdeVersion}-SNAPSHOT</uiIdeVersionMaven>
    <uiEditorsVersion>3.8.200.v20140401-1310</uiEditorsVersion>
    <uiEditorsVersionMaven>${uiEditorsVersion}-SNAPSHOT</uiEditorsVersionMaven>
    <uiViewsVersion>3.7.0.v20140408-0703</uiViewsVersion>
    <uiViewsVersionMaven>${uiViewsVersion}-SNAPSHOT</uiViewsVersionMaven>
    <uiFormsVersion>3.6.100.v20140422-1825</uiFormsVersion>
    <uiFormsVersionMaven>${uiFormsVersion}-SNAPSHOT</uiFormsVersionMaven>
    <!-- version of Tycho used by org.eclipse.scout.sdk.core.releng build -->
    <tychoBootstrapVersion>0.22.0</tychoBootstrapVersion>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <!-- Used for attaching target-files to the artifact in org.eclipse.scout.target -->
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>build-helper-maven-plugin</artifactId>
          <version>1.7</version>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.2</version>
          <configuration>
            <compilerId>jdt</compilerId>
            <source>${jdk.source.version}</source>
            <target>${jdk.source.version}</target>
            <compilerArgs>
              <arg>-proc:none</arg>
            </compilerArgs>
          </configuration>
          <dependencies>
            <dependency>
              <groupId>org.eclipse.tycho</groupId>
              <artifactId>tycho-compiler-jdt</artifactId>
              <version>0.23.0</version>
            </dependency>
          </dependencies>
        </plugin>

        <plugin>
          <groupId>org.eclipse.cbi.maven.plugins</groupId>
          <artifactId>eclipse-cbi-plugin</artifactId>
          <version>${cbi-plugins.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <mailingLists>
    <mailingList>
      <name>scout-dev Mailing List</name>
      <subscribe>https://dev.eclipse.org/mailman/listinfo/scout-dev</subscribe>
      <unsubscribe>https://dev.eclipse.org/mailman/listinfo/scout-dev</unsubscribe>
      <post>scout-dev@eclipse.org</post>
      <archive>http://dev.eclipse.org/mhonarc/lists/scout-dev</archive>
    </mailingList>
  </mailingLists>

  <scm>
    <connection>scm:git:git://git.eclipse.org/gitroot/scout/org.eclipse.scout.sdk.git</connection>
    <url>http://git.eclipse.org/c/scout/org.eclipse.scout.sdk.git/</url>
  </scm>

  <issueManagement>
    <system>Bugzilla</system>
    <url>https://bugs.eclipse.org/bugs/buglist.cgi?classification=Technology;component=Scout SDK;product=Scout;query_format=advanced</url>
  </issueManagement>

  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>eclipse.release</id>
      <name>eclipse-release-repo</name>
      <url>https://repo.eclipse.org/content/groups/releases/</url>
    </repository>
    <repository>
      <snapshots></snapshots>
      <id>eclipse.snapshot</id>
      <name>eclipse-snapshot-repo</name>
      <url>https://repo.eclipse.org/content/groups/snapshots/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>eclipse.release</id>
      <name>eclipse-release-repo</name>
      <url>https://repo.eclipse.org/content/groups/releases/</url>
    </pluginRepository>
    <pluginRepository>
      <snapshots></snapshots>
      <id>eclipse.snapshot</id>
      <name>eclipse-snapshot-repo</name>
      <url>https://repo.eclipse.org/content/groups/snapshots/</url>
    </pluginRepository>
  </pluginRepositories>

  <profiles>
    <profile>
      <id>eclipse-sign</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.tycho</groupId>
            <artifactId>target-platform-configuration</artifactId>
            <version>${tycho.version}</version>
            <configuration>
              <includePackedArtifacts>false</includePackedArtifacts>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-pack200a-plugin</artifactId>
            <version>${tycho-extras.version}</version>
            <executions>
              <execution>
                <id>pack200-normalize</id>
                <goals>
                  <goal>normalize</goal>
                </goals>
                <phase>verify</phase>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.eclipse.cbi.maven.plugins</groupId>
            <artifactId>eclipse-jarsigner-plugin</artifactId>
            <version>${jarsigner.version}</version>
            <executions>
              <execution>
                <id>sign</id>
                <goals>
                  <goal>sign</goal>
                </goals>
                <phase>verify</phase>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-pack200b-plugin</artifactId>
            <version>${tycho-extras.version}</version>
            <executions>
              <execution>
                <id>pack200-pack</id>
                <goals>
                  <goal>pack</goal>
                </goals>
                <phase>verify</phase>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho</groupId>
            <artifactId>tycho-p2-plugin</artifactId>
            <version>${tycho.version}</version>
            <configuration>
              <defaultP2Metadata>false</defaultP2Metadata>
            </configuration>
            <executions>
              <execution>
                <id>p2-metadata</id>
                <goals>
                  <goal>p2-metadata</goal>
                </goals>
                <phase>verify</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>eclipse-pack</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.tycho</groupId>
            <artifactId>target-platform-configuration</artifactId>
            <version>${tycho.version}</version>
            <configuration>
              <includePackedArtifacts>true</includePackedArtifacts>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-pack200a-plugin</artifactId>
            <version>${tycho-extras.version}</version>
            <executions>
              <execution>
                <id>pack200-normalize</id>
                <goals>
                  <goal>normalize</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-pack200b-plugin</artifactId>
            <version>${tycho-extras.version}</version>
            <executions>
              <execution>
                <id>pack200-pack</id>
                <goals>
                  <goal>pack</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.eclipse.tycho</groupId>
            <artifactId>tycho-p2-plugin</artifactId>
            <version>${tycho.version}</version>
            <configuration>
              <defaultP2Metadata>false</defaultP2Metadata>
            </configuration>
            <executions>
              <execution>
                <id>p2-metadata</id>
                <goals>
                  <goal>p2-metadata</goal>
                </goals>
                <phase>package</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
